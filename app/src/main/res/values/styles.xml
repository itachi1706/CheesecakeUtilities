<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoAppBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AttribouterTheme" parent="AppTheme.NoAppBar" />

    <style name="AppTheme.Invisible" parent="AppTheme.NoAppBar" >
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="AppBarLayout" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="AppBarLayoutOverflow" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="LegacyLightThemeNoAppBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Special Module Themes -->
    <style name="ApkMirrorSplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/apkmirror_splash</item>
        <item name="colorPrimary">@color/apkmirrorPrimary</item>
        <item name="colorPrimaryDark">@color/apkmirrorPrimaryDark</item>
        <item name="colorAccent">@color/apkmirrorAccent</item>
    </style>

    <style name="ColourButtonAccent" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ColourButtonAccentText" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BinHexLightRadio" parent="AppTheme">
        <item name="colorControlNormal">@color/grey_300</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
