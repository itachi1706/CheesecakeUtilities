<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Quiet Hour Utility">
        <SwitchPreference android:title="Show Quiet Hour Trigger History"
            android:summary="Shows a list of the times that Quiet Hour has triggered"
            android:key="quiethour_history_view" android:defaultValue="true" />
        <Preference android:title="Clear Quiet Hour Trigger History" android:key="quiethour_clear_hist" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Vehicle Mileage Utility">
        <EditTextPreference android:title="Vehicle Mileage Report Rows"
            android:summary="%s" android:defaultValue="38" android:inputType="numberDecimal"
            android:key="veh_mileage_report_rows" />
        <SwitchPreference android:title="Decimal point in Mileage value"
            android:summary="If enabled, shows the decimal point, otherwise round up the mileage"
            android:key="veh_mileage_decimal" android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory android:title="CEPAS Card Reader">
        <CheckBoxPreference
            android:title="@string/launch_from_background"
            android:persistent="false"
            android:key="pref_launch_from_background"/>

        <CheckBoxPreference
            android:title="@string/convert_timezones"
            android:summary="@string/convert_timezones_summary"
            android:key="pref_convert_timezones"
            android:defaultValue="false"/>
    </PreferenceCategory>

</PreferenceScreen>
