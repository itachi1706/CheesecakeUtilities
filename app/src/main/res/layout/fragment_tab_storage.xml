<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <androidx.cardview.widget.CardView
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_storage1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/sys_info_storage1"

                    android:textColor="#424242"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_height="12dp"
                android:layout_width="match_parent" />

            <androidx.cardview.widget.CardView
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_storage2"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/sys_info_storage4"

                        android:textColor="#424242"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_300" />

                    <TextView
                        android:id="@+id/intMemTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/sys_info_storage2"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_height="12dp"
                android:layout_width="match_parent" />

            <androidx.cardview.widget.CardView
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_storage3"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sdkDetectTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/sys_info_storage3"

                        android:textColor="#424242"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_300" />

                    <TextView
                        android:id="@+id/extMemTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/sys_info_storage2"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <TextView
                        android:id="@+id/remMemTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_height="6dp"
                android:layout_width="match_parent" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
