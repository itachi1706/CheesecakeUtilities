<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
    android:paddingRight="?android:attr/listPreferredItemPaddingRight"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="App Name"
        android:id="@+id/tvAppName"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvAPI"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_toEndOf="@+id/iv_icon" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/iv_icon"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="com.example.appname"
        android:id="@+id/tvPackageName"
        android:layout_below="@+id/tvAppName"
        android:layout_toLeftOf="@+id/tvAPI"
        android:layout_alignLeft="@+id/tvAppName"
        android:layout_alignStart="@+id/tvAppName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="21"
        android:id="@+id/tvAPI"
        android:layout_alignBottom="@+id/tvPackageName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="/data/app/com.example.appname"
        android:id="@+id/tvApkLocation"
        android:layout_below="@+id/tvPackageName"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_alignRight="@+id/tvPackageName"
        android:layout_alignEnd="@+id/tvPackageName" />
</RelativeLayout>
