<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.itachi1706.cheesecakeutilities.Games.TicTacToe.TicTacToeActivity">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/tic_tac_toe_button_placeholder"
        android:id="@+id/r12"
        android:layout_marginTop="142dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/tic_tac_toe_button_placeholder"
        android:id="@+id/r22"
        android:layout_below="@+id/r12"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/tic_tac_toe_button_placeholder"
        android:id="@+id/r32"
        android:layout_below="@+id/r22"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/tic_tac_toe_button_placeholder"
        android:id="@+id/r11"
        android:layout_above="@+id/r22"
        android:layout_toLeftOf="@+id/r12"
        android:layout_toStartOf="@+id/r12" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/tic_tac_toe_button_placeholder"
        android:id="@+id/r21"
        android:layout_above="@+id/r32"
        android:layout_toLeftOf="@+id/r22"
        android:layout_toStartOf="@+id/r22" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/tic_tac_toe_button_placeholder"
        android:id="@+id/r31"
        android:layout_alignTop="@+id/r32"
        android:layout_toLeftOf="@+id/r32"
        android:layout_toStartOf="@+id/r32" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/tic_tac_toe_button_placeholder"
        android:id="@+id/r13"
        android:layout_above="@+id/r22"
        android:layout_toRightOf="@+id/r12"
        android:layout_toEndOf="@+id/r12" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/tic_tac_toe_button_placeholder"
        android:id="@+id/r23"
        android:layout_alignBottom="@+id/r22"
        android:layout_toRightOf="@+id/r22"
        android:layout_toEndOf="@+id/r22" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/tic_tac_toe_button_placeholder"
        android:id="@+id/r33"
        android:layout_alignBottom="@+id/r32"
        android:layout_alignLeft="@+id/r23"
        android:layout_alignStart="@+id/r23" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/btnStart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Game"
        android:id="@+id/btnReset"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/grpGamePlay"
        android:layout_alignEnd="@+id/grpGamePlay" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/r11"
        android:id="@+id/grpGamePlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Select Mode"
            android:id="@+id/textView" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Player"
            android:id="@+id/rbSP"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Player"
            android:id="@+id/rbMP" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Press Start Game to Start"
        android:id="@+id/lblInstructions"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/r32"
        android:layout_alignRight="@+id/grpGamePlay"
        android:layout_alignEnd="@+id/grpGamePlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time Taken: - secs"
        android:id="@+id/countUpTimerLabel"
        android:layout_below="@+id/lblInstructions"
        android:layout_alignLeft="@+id/lblInstructions"
        android:layout_alignStart="@+id/lblInstructions" />

</RelativeLayout>
