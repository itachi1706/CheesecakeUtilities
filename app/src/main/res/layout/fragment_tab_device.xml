<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_cpu"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/CPU1"

                        android:textColor="#424242"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_grey_300" />

                    <TextView
                        android:id="@+id/cpuTypeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/CPU2"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/cpuInstructTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/CPU3"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/cpuMaxTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/CPU4"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/cpuMinTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/CPU5"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/cpuFreq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/CPU6"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/cpuCoreCountTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/CPU7"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_height="12dp"
                android:layout_width="match_parent" />

            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_mem"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/memory1"

                        android:textColor="#424242"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_grey_300" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/memory2"

                        android:textColor="#9e9e9e"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/ramTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/memory3"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/ramFree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/memory4"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_height="12dp"
                android:layout_width="match_parent" />

            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_display"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/display1"

                        android:textColor="#424242"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_grey_300" />

                    <TextView
                        android:id="@+id/displayInfoTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/display2"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/displaySizeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/display3"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_height="12dp"
                android:layout_width="match_parent" />

            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/card_view_device"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/device1"

                        android:textColor="#424242"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_grey_300" />

                    <TextView
                        android:id="@+id/deviceInfoTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/device2"

                        android:textColor="#616161"
                        android:textIsSelectable="true" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_height="6dp"
                android:layout_width="match_parent" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
